<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/meetupListFragment">

    <fragment
        android:id="@+id/meetupListFragment"
        android:name="com.github.palFinderTeam.palfinder.meetups.fragments.MeetupListFragment"
        android:label="MeetupListFragment"
        tools:layout="@layout/fragment_meetup_list">
        <action
            android:id="@+id/action_meetupListFragment_to_meetup_show_fragment"
            app:destination="@id/meetup_show_fragment" />
        <argument
            android:name="ShowNavBar"
            android:defaultValue="true" />
    </fragment>
    <fragment
        android:id="@+id/map_fragment"
        android:name="com.github.palFinderTeam.palfinder.meetups.fragments.MeetUpMapFragment"
        android:label="MeetUpMapFragment"
        tools:layout="@layout/fragment_map">
        <action
            android:id="@+id/action_map_fragment_to_meetup_show_fragment"
            app:destination="@id/meetup_show_fragment" />
        <argument
            android:name="ShowNavBar"
            android:defaultValue="true"
            app:argType="boolean" />
        <argument
            android:name="SelectLocation"
            app:argType="boolean"
            android:defaultValue="false" />
        <argument
            android:name="ReplaceLocation"
            app:argType="com.google.android.gms.maps.model.LatLng"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>
    <fragment
        android:id="@+id/meetup_creation_fragment"
        android:name="com.github.palFinderTeam.palfinder.meetups.fragments.MeetUpCreationFragment"
        android:label="MeetUpCreationFragment"
        tools:layout="@layout/fragment_meetup_creation">
        <argument
            android:name="meetupId"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />
        <argument
            android:name="ShowNavBar"
            android:defaultValue="true"
            app:argType="boolean" />
        <action
            android:id="@+id/action_meetup_creation_fragment_to_meetup_show_fragment"
            app:destination="@id/meetup_show_fragment" />
        <action
            android:id="@+id/action_meetup_creation_fragment_select_location"
            app:destination="@id/map_fragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right">
            <argument
                android:name="ShowNavBar"
                android:defaultValue="false" />
            <argument
                android:name="SelectLocation"
                android:defaultValue="true" />
            <argument
                android:name="ReplaceLocation"
                app:argType="com.google.android.gms.maps.model.LatLng"
                app:nullable="true" />
        </action>
    </fragment>
    <fragment
        android:id="@+id/meetup_show_fragment"
        android:name="com.github.palFinderTeam.palfinder.meetups.fragments.MeetUpShowFragment"
        android:label="MeetUpShowFragment"
        tools:layout="@layout/fragment_meetup_show">
        <argument
            android:name="meetupId"
            app:argType="string" />
        <action
            android:id="@+id/action_meetup_show_fragment_to_meetup_creation_fragment"
            app:destination="@id/meetup_creation_fragment" />
    </fragment>
</navigation>