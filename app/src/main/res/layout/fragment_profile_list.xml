<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fredoka_bold"
        android:padding="20dp"

        android:text="@string/title_attendees_list"
        android:textSize="24sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fredoka_normal"
        android:text="@string/search_user_hint"
        android:paddingHorizontal="20dp"
        android:textSize="14sp" />

    <SearchView
        android:id="@+id/profile_list_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:queryHint="Search for user">
    </SearchView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/profile_list_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp" />
</LinearLayout>