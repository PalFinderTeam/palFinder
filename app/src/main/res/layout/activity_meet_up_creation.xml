<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".meetups.activities.MeetUpCreation">

    <ScrollView
        android:id="@+id/sv_meetupcreation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:scrollIndicators="right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:scrollbars="vertical">

            <EditText
                android:id="@+id/et_EventName"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:ems="10"
                android:hint="@string/meetup_creation_meetup_name"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/et_Description"
                android:layout_width="match_parent"
                android:layout_height="159dp"
                android:ems="10"
                android:gravity="start|top"
                android:hint="@string/meetup_creation_meetup_description"
                android:inputType="textMultiLine" />

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/tv_icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/meetup_creation_meetup_icon" />

            <Button
                android:id="@+id/bt_locationSelect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onSelectLocation"
                android:text="@string/meetup_creation_meetup_select_location" />

            <TextView
                android:id="@+id/tv_LocationCoordinate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_Icon"
                    android:layout_width="141dp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_launcher_background"
                    tools:srcCompat="@tools:sample/avatars" />

                <Button
                    android:id="@+id/bt_SelectIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="TODO" />

            </LinearLayout>

            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_StartDateLabel"
                    android:layout_width="141dp"
                    android:layout_height="wrap_content"
                    android:text="@string/meetup_creation_meetup_start_date" />

                <TextView
                    android:id="@+id/tv_StartDate"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:onClick="onStartTimeSelectButton"
                    android:text="@string/date_long_format"
                    tools:ignore="DuplicateSpeakableTextCheck" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_EndDateLabel"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="@string/meetup_creation_meetup_end_date" />

                <TextView
                    android:id="@+id/tv_EndDate"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:onClick="onEndTimeSelectButton"
                    android:text="@string/date_long_format" />
            </LinearLayout>

            <View
                android:id="@+id/divider3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/tv_TagsLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/meetup_creation_meetup_tags" />

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/fc_tags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout="@layout/fragment_tags_display" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/hasCapacityButton"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:text="@string/limit_people" />

                <EditText
                    android:id="@+id/et_Capacity"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="@string/meetup_creation_meetup_entries"
                    android:inputType="numberSigned"
                    android:autofillHints="" />
            </LinearLayout>

            <Button
                android:id="@+id/bt_Done"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onDone"
                android:text="@string/meetup_creation_meetup_done" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>