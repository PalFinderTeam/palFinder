<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/meetup_list_recycler"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_list">

    </androidx.recyclerview.widget.RecyclerView>

    <Button
        android:id="@+id/sort_alph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="96dp"
        android:onClick="sortByName"
        android:text="@string/list_sort_by_alphabetical_order"
        app:layout_constraintBottom_toTopOf="@id/list_select_tag"
        app:layout_constraintEnd_toStartOf="@id/sort_capacity"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/sort_capacity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="128dp"
        android:onClick="sortByCap"
        android:text="@string/list_sort_by_capacity"
        app:layout_constraintBottom_toTopOf="@id/list_select_tag"
        app:layout_constraintStart_toEndOf="@id/sort_alph"
        app:layout_constraintTop_toTopOf="parent" />

    <SearchView
        android:id="@+id/search_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/meetup_list_recycler"
        app:layout_constraintTop_toBottomOf="@id/list_select_tag"
        tools:layout_editor_absoluteX="16dp">

    </SearchView>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/list_select_tag"
        android:name="com.github.palFinderTeam.palfinder.tag.TagsDisplayFragment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/search_list"
        app:layout_constraintTop_toBottomOf="@+id/sort_alph"
        tools:layout="@layout/fragment_tags_display"
        tools:layout_editor_absoluteX="147dp" />

</androidx.constraintlayout.widget.ConstraintLayout>