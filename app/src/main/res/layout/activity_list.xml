<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fc_navbar3"
        android:name="com.github.palFinderTeam.palfinder.navbar.NavigationBarFragment"
        android:layout_width="0dp"
        android:layout_height="65dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/list_select_tag"
        android:name="com.github.palFinderTeam.palfinder.tag.TagsDisplayFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/meetup_list_recycler"
        app:layout_constraintTop_toBottomOf="@id/sort_list"
        tools:layout_editor_absoluteX="205dp" />

    <Button
        android:id="@+id/sort_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:onClick="showMenu"
        android:text="@string/list_sort_menu"
        app:layout_constraintBottom_toTopOf="@id/list_select_tag"
        app:layout_constraintEnd_toStartOf="@+id/search_place"
        app:layout_constraintLeft_toRightOf="@id/search_list"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/search_place"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:onClick="searchOnMap"
        android:tint="@color/purple_500"
        app:layout_constraintBottom_toTopOf="@id/list_select_tag"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/search_list"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_dialog_map" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/meetup_list_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="8dp"
        app:layout_constraintBottom_toTopOf="@+id/fc_navbar3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/list_select_tag">

    </androidx.recyclerview.widget.RecyclerView>

    <SearchView
        android:id="@+id/search_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/list_select_tag"
        app:layout_constraintEnd_toStartOf="@+id/sort_list"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </SearchView>



</androidx.constraintlayout.widget.ConstraintLayout>